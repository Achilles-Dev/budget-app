<nav class='d-flex justify-content-between align-items-center px-2 py-2 bg-blue'>
  <a href="<%= url_for(:categories) %>">
    <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-arrow-left text-white" viewBox="0 0 16 16">
      <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"/>
    </svg>
  </a>
  <h3 class="my-0 text-white">Categories</h3>
  <%= button_to 'LOG OUT', destroy_user_session_path, method: :delete, class: 'btn btn-link text-white' %>
</nav>
<div class="mt-3">
  <% @categories.each do |category| %>
    <div class="card d-flex flex-row justify-content-between py-3 px-2 align-items-center">
      <div class="d-flex flex-row justify-content-between px-2 gap-3 align-items-center">
        <img class="icon-image" src=<%= category.icon%> alt="Icon">  
        <h3><%= link_to category.name, category_deals_path(category) %></h3>
      </div>
      <div class="float-end">
        <% amount = category.deals.reduce(0) do |total, deal| %>
          <% total + (deal[:amount]) %>
        <% end %>
        <p>$<%= amount %></p>
      </div>
    </div>
    <div>
  <% end %>
  <%= link_to 'Add a new Category', new_category_path, class: 'btn btn-primary py-2 mt-3 d-flex justify-content-center' %>
</div>
