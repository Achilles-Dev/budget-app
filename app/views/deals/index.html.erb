<%= render "layouts/navbar", header: @category.name, right_nav: "deals/index" %>
<div class="card">
  <div class="d-flex justify-content-between align-items-center px-3 py-3">
    <h4>Total amount</h4>
    <h3 class="text-dark">$<%= @category.total_amount %></h3>
  </div>
</div>
<div class="mt-3">
  <% @deals.each do |deal| %>
    <div class="card py-3 mx-2">
      <div class="d-flex flex-row justify-content-between px-2 gap-3 align-items-center">  
        <h3><%= deal.name %></h3>
        <h3 class="text-dark">$<%= deal.amount %></h3>
      </div>
    </div>
  <% end %>
  <h3><%= link_to 'Add a new deal', new_category_deal_path, class: 'btn btn-primary py-2 mt-3 d-flex justify-content-center' %></h3>
</div>
