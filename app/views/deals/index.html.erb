<%= render "layouts/navbar", header: 'TRANSACTIONS', right_nav: "deals/index" %>
<%= render "layouts/messages"%>
<div class="card">
  <div class="d-flex justify-content-between align-items-center px-3 py-3">
    <h4><%= @category.name %></h4>
    <h3 class="text-dark">$<%= @category.total_amount %></h3>
  </div>
</div>
<div class="mt-3">
  <% @deals.each do |deal| %>
    <div class="card py-3 mx-2">
      <div class="d-flex flex-row justify-content-between px-2 gap-3 align-items-center">  
        <h3><%= deal.name %></h3>
        <h3 class="text-dark">$<%= deal.amount %></h3>
      </div>
    </div>
  <% end %>
  <div class="position-absolute bottom-0 w-100">
    <h3><%= link_to 'Add a new deal', new_category_deal_path, class: 'btn btn-success w-100 py-5' %></h3>
    </div>
</div>
