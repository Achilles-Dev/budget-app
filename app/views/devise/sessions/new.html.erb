<div class="mb-3">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class='d-flex justify-content-between align-items-center px-2 py-2 bg-blue'>
      <a href="<%= url_for(:back) %>">
        <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-arrow-left text-white" viewBox="0 0 16 16">
          <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"/>
        </svg>
      </a>
      <h3 class="my-0 text-white">LOGIN</h3>
      <%= f.submit "Log in", class: "text-white border-0 bg-blue"%>
    </div>
    <div class="d-flex flex-column mt-4 bg-white">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control border-0 border-top mt-0 py-2", placeholder: "Email" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control border-0 border-top mt-0 py-2", placeholder: "Password" %>
      </div>
    </div>
  <% end %>
</div>
<div class="text-center">
<%= render "devise/shared/links" %>
</div>
