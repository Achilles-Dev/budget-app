<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <div class='d-flex justify-content-evenly align-items-center px-2 py-2 bg-blue gap-3'>
    <a href="<%= url_for(:back) %>">
      <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-arrow-left text-white" viewBox="0 0 16 16">
        <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"/>
      </svg>
    </a>
    <h3 class="my-0 text-white">FORGOT YOUR PASSWORD?</h3>
  </div>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="d-flex flex-column mt-4 bg-white">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control border-0 border-top mt-0 py-3", placeholder: "Email" %>
    <div class="actions">
      <%= f.submit "Send me reset password instructions", class: "form-control btn btn-primary py-2" %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
